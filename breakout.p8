version 30
__lua__

-- Making a Breakout Style game in Pico-8


ball_x = 1
ball_y = 42
ball_dx = 2
ball_dy = 2
ball_r = 2
game_on = true
color = 10

function _init()
    cls()
end

function _update()
    ball_x += ball_dx
    ball_y += ball_dy
    color += 1
    ball_r += 1
    
    screen_check()

end

function _draw()
    cls() -- clear the screen
    ball()

end

--Functions Below

function ball()
    circfill(ball_x,ball_y,ball_r,color)
    if ball_r == 5 then 
        ball_r = 0
    end
end

function screen_check() --check to see if ball leaves the screen
    if ball_x > 127 or ball_x < 0 then
        ball_dx = -ball_dx 
    end
    if ball_y > 127 or ball_y <0 then
        ball_dy = -ball_dy
    end
end
